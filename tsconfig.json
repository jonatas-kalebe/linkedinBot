{
    "compilerOptions": {
        "lib": [
            "es2022",
            "DOM"
        ],
        "target": "es2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        },
        "transpileOnly": true
    }
}